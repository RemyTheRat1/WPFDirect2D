<UserControl x:Class="WpfDirect2d.Direct2dSurface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:directX="clr-namespace:Microsoft.Wpf.Interop.DirectX;assembly=Microsoft.Wpf.Interop.DirectX"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid Name="ImageContainer" ClipToBounds="True">
        <Image Name="InteropHost" Stretch="Fill">
            <Image.Source>
                <directX:D3D11Image x:Name="InteropImage" />
            </Image.Source>
        </Image>
    </Grid>
</UserControl>
